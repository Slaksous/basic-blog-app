<%- include('./partials/header') %> 

<div class="container" >

    <h1 class="header-posts">POSTS</h1>

    <% posts.forEach(post => { %>
        <div class="post">
            <h3 class="post-author"><%= post.author   %></h3>
            <p class="lead post-text"><%=  post.text     %></p>
            <p class="post-createAt"><%=  post.createAt.toISOString().split('T')[0] %></p>
        </div>
    <% }); %> 

</div>

<%- include('./partials/footer') %>